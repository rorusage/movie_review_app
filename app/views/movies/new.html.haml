.col-md-4.col-md-offset-4
  %h1 新增電影

  %hr
  = simple_form_for @movie, html:{ multipart: true } do |f|
    .form-group
      = f.input :image, type: :file
      = f.input :remote_image_url, input_html: {class: "form-control"}
      = f.input :title, input_html: {class: "form-control"}
      = f.input :description, input_html: {class: "form-control"}
      = f.input :director, input_html: {class: "form-control"}
      = f.input :release_date, input_html: {class: "form-control"}
      = f.input :rating, collection: ["G", "PG", "PG-13", "R", "NC-17"], input_html: {class: "form-control"}
    = f.submit "Submit", class: "btn btn-primary", data: {disable_with: "Submitting..."}

