.col-md-4.col-md-offset-4
  %h1 修改電影
  = simple_form_for @movie do |f|
    - if f.object.image?
      = image_tag f.object.image.thumb.url.to_s
      = f.label :remove_image
      = f.check_box :remove_image
    - else
      = f.input :image , type: :file
      = f.input :remote_image_url, input_html: {class: "form-control"}

    = f.input :title, input_html: {class: "form-control"}
    = f.input :description, input_html: {class: "form-control"}
    = f.input :director, input_html: {class: "form-control"}
    = f.input :release_date, input_html: {class: "form-control"}
    = f.input :rating, input_html: {class: "form-control"}
    = f.submit "Submit", class: "btn btn-primary", data: {disable_with: "Submitting..."}
